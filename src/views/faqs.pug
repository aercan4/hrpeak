extends blocks/layout
block vars
    - var index = true;
    - var header = true;
    - var footer = true;
    - var shortcut = true;
    - var shortcutTalentImg = true;

block append head
    title FAQ | Hr Peak
    meta(name='description' content="One tool to manage contracts and your team")
    // Facebook
    meta(property='og:title' content='Hr Peak')
    meta(property='og:description' content="One tool to manage contracts and your team")
    meta(property='og:image' content='assets/img/thumb.jpg')
    // Twitter
    meta(property='twitter:url' content='#')
    meta(property='twitter:title' content='Hr Peak')
    meta(property='twitter:description' content="One tool to manage contracts and your team")
    meta(property='og:image' content='assets/img/thumb.jpg')

block content 
    .subpage.faqs

        .subpage-intro.container 
            .hero.hero-left.hero-bg-dark
                h5.toptitle Sıkça Sorulan Sorular
                h1.title.title--xxl.title--center.hero-title We make it effortlessly to track all user analytics
            a(href='/contact.html').support-card    
                .support-card-content
                    h3.title Müşteri Destek
                    p.description Birden çok aracı bir arada sunan sistem sayesinde daha fazla adayı daha kısa sürede.
                .support-card-arrow
                    svg.icon.icon-font 
                        use(xlink:href='assets/icons/icons.svg#icon-right')


        .subpage-content 
            section.tab
                .tab-link-wrapper.scroll-hidden
                    .section-divider-shape   
                        img(src="assets/img/basic-logo.svg")
                    .animated-tabs.scroll-hidden.animated-tabs--badge
                        .animated-tabs-item.js-tab-item.js-filter-all(data-filter="all" data-scroll="true") 

                            span Tümünü Gör
                        .animated-tabs-item.js-tab-item(data-filter="tecrube" data-scroll="true") 

                            span Tecrübe
                        .animated-tabs-item.js-tab-item(data-filter="lokasyon" data-scroll="true") 

                            span Lokasyon
                        .animated-tabs-item.js-tab-item(data-filter="calismaSekli" data-scroll="true") 

                            span Çalışma Şekli
                        .animated-tabs-item.js-tab-item(data-filter="egitim" data-scroll="true") 

                            span Eğitim
                        .animated-tabs-item.js-tab-item(data-filter="tecrube" data-scroll="true") 

                            span Tecrübe
                        .animated-tabs-item.js-tab-item(data-filter="egitim" data-scroll="true") 

                            span Eğitim
                        .ghost


                .tab-content-wrapper
                    .tab-content
                        .filtered-item.tecrube 
                            - var faqSectionTitle = "Kategori adı 1"
                            - var faqSectionDescription = "İçerisinde global şirketlerin de bulunduğu 1000’den fazla firmaya hizmet sağlayan HRPeak,"
                            include blocks/components/faq-section 
                            include blocks/components/faq-section 

                        .filtered-item.lokasyon 
                            include blocks/components/faq-section 

                        .filtered-item.calismaSekli
                            include blocks/components/faq-section

                        .filtered-item.egitim
                            include blocks/components/faq-section